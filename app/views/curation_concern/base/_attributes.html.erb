<%= render_full_record(curation_concern) %>
<table class="table table-striped <%= dom_class(curation_concern) %> attributes">
  <caption class="table-heading"><h2>Attributes</h2><%=full_record_link(curation_concern)%></caption>
  <thead>
    <tr><th>Attribute Name</th><th>Values</th></tr>
  </thead>
  <tbody>
  <%= curation_concern_attribute_to_html(curation_concern, :creator, 'Creator', { catalog_search_link: true }) %>
  <%= curation_concern_attribute_to_html(curation_concern, :contributor, 'Contributor', { catalog_search_link: true }) %>
  <%= curation_concern_attribute_to_html(curation_concern, :description, 'Description') %>
  <%#= render partial: 'contributors_attribute' %>
  <%= curation_concern_attribute_to_html(curation_concern, :subject, "Subject", { catalog_search_link: true }) %>
  <%= curation_concern_attribute_to_html(curation_concern, :date, "Date") %>
  <%= curation_concern_attribute_to_html(curation_concern, :publisher, "Publisher", { catalog_search_link: true }) %>
  <%= curation_concern_attribute_to_html(curation_concern, :coverage, "Coverage") %>
  <%#= curation_concern_attribute_to_html(curation_concern, :bibliographic_citation, "Bibliographic Citation") %>
  <%= curation_concern_with_link_to_html(curation_concern, :source, "Source") %>
  <%= curation_concern_attribute_to_html(curation_concern, :language, "Language") %>
  <%= curation_concern_attribute_to_html(curation_concern, :type, "Type") %>
  <%= curation_concern_attribute_to_html(curation_concern, :type, "Identifier") %>
  <%= curation_concern_attribute_to_html(curation_concern, :content_format, "Format") %>
  <tr>
    <th>Identifier</th>
    <td>
      <%= curation_concern[:identifier].join(", ") %>
    </td>
  </tr>

  <tr>
    <th>Access Rights</th>
    <td>
      <%= permission_badge_for(curation_concern) %>
    </td>
  </tr>
  <tr>
	<th>RIS Citation</th>
	<td>
		<%# The call to export_ris is making use of the :id in the url to identify the object %>
		<%= button_to "Export RIS", {controller: "/catalog", action: "export_ris"} %>
	</td>
  </tr>
  <%= curation_concern_attribute_to_html(curation_concern, :embargo_release_date, "Embargo Release Date") %>
  <%= curation_concern_attribute_to_html(curation_concern, :lease_expiration_date, "Lease Expiration Date") %>
  </tbody>
</table>
