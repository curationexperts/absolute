<h3> Split a Field </h3>
<p> This form splits a value on a specified character for the selected field </p>
<%= form_tag("/bulk_update/split", class: "form-horizontal") do %>
  <div class="form-group">
    <%= label_tag( :string, "String to split", class: "control-label col-sm-2") %>
    <div class="col-sm-10">
      <%= text_field_tag( :string, nil, class: "form-control" ) %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag( :char, "Delimiter", class: "control-label col-sm-2" ) %>
    <div class="col-sm-10">
      <%= text_field_tag( :char, nil, class: "form-control" ) %>
    </div>
  </div>
  <%= render 'fields' %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <%= submit_tag("Split", class: "btn btn-default btn-primary" ) %>
    </div>
  </div>
<% end %>
